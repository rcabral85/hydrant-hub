# ===================================================================
# HydrantHub Frontend Environment Configuration
# ===================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control
# ===================================================================

# API Configuration
# Local development
VITE_API_URL=http://localhost:5000/api

# Production examples:
# VITE_API_URL=https://hydrant-management-production.up.railway.app/api
# VITE_API_URL=https://api.yourdomain.com/api

# Application Configuration
VITE_APP_NAME=HydrantHub
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false

# Map Configuration (optional)
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_DEFAULT_MAP_CENTER_LAT=43.5890
VITE_DEFAULT_MAP_CENTER_LNG=-79.6441
VITE_DEFAULT_MAP_ZOOM=11

# Analytics (optional)
VITE_GA_TRACKING_ID=

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=
