{
  "name": "hydranthub-backend",
  "version": "1.0.0",
  "description": "HydrantHub API with NFPA 291 calculations",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node scripts/init-db.js && node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "db:init": "node scripts/init-db.js",
    "db:setup": "psql -f sql/schema.sql",
