# ===================================================================
# HydrantHub Backend Environment Configuration
# ===================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control
# ===================================================================

# Database Configuration
# For Railway/production: Use DATABASE_URL
# For local dev: Use individual DB_* variables
DATABASE_URL=postgresql://username:password@host:port/database

# Alternative: Individual database settings (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hydrantdb
DB_USER=hydrantuser
DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
# Add all domains that should access your API
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# JWT Configuration
# CRITICAL: Generate a secure random string for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_64_CHARACTERS
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=http://localhost:5000/api

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info

# Email Configuration (optional - for user invitations)
# Gmail example: smtp.gmail.com:587
# Use app-specific password for Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com

# Optional: Email service API keys (alternative to SMTP)
# SENDGRID_API_KEY=
# MAILGUN_API_KEY=
# MAILGUN_DOMAIN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
